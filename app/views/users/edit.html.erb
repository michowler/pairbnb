<br>
<div style="font-family: 'Comfortaa', cursive; font-size: 30px;">UPDATE PROFILE</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-6 left">

	      <%= form_for @user do |form| %>
	      <div class="name-field">
          <%= form.label :full_name %>
          <%= form.text_field :full_name %>
        </div>

        <% if current_user.avatar.url.present? %>
           <%= image_tag(current_user.avatar.url) %>
           <%= form.label :remove_avatar do %>
             <%= form.check_box :remove_avatar %>
             <% @user.remove_avatar!%>
             Remove avatar
           <% end %>
         <% end %>
         <%= form.file_field :avatar %>
         <%= form.hidden_field :avatar_cache %>  

        <div class="gender-field"> 
          <%= form.label :gender %>
          <%= form.select :gender, options_for_select([["undefined", :undefined], ["male", :male], ["female", :female]])%>
        </div>

        <div class="age-field">
          <%= form.label :age %>
          <%= form.number_field :age %>
        </div>

        <div class="email-field">
          <%= form.label :email %>
          <%= form.text_field :email %>
        </div>

        <div class="password-field">
          <%= form.label :password %><i>(we need your current password to confirm your changes)</i>
          <%= form.password_field :password %>
        </div>

        <br>
        <div><%= link_to 'Cancel', @user %> <%= form.submit "Update" %></div>
        <%end%>
      </div>

       <div class="col-md-6 right">
       </div> 

    </div>
  </div>
</div>