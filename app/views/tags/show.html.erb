<% @tag.listings.each do |l|%>
<div class="promos">  
	<div class="promo scale">
	  <div class="deal">
	    <span><%= l.title %></span>
	    <span><%= l.description %></span>
	  </div>
	  <span class="price">RM<%= l.price %></span>
	  <ul class="features">
	    <li><%= l.place_type %></li>
	    <li><%= l.bedroom %> rooms</li>
	    <li><%= l.guest %> guests</li>  
	    <li><%l.tags.each do |t|%>
		    <%=link_to "#{t.tag_content}", tag_listings_path(t.id)%><br>
		    <%end%>
	    </li>
	  </ul>

	  <button>Book Now</button>
	</div>
</div>
<%end%>
