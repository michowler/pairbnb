<!DOCTYPE html>
<html>
<head>
  <title>Mingle</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>

<body>

  <div id="header">
    <% if signed_in? -%>
    <nav class="navbar navbar-inverse">
        <div class="navbar-header">
          <%= link_to 'Mingle', root_path, class: 'navbar-brand' %>
            <span class= 'navbar-brand' id="main" style="font-size:15px;cursor:pointer" onclick="openNav()">&#9776; more info</span>
            <div id="mySidenav" class="sidenav">
              <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
              <%= link_to "Create listing", new_listing_path %>
              Tags: <% @tags.each do |t|%>
              <%=link_to t.tag_content, tag_listings_path(t.id)%>
            <%end%>
            </div>
        </div>

        <div class="nav navbar-nav pull-right">
          <span class='navbar-brand'> Welcome back <%=current_user.email%> </span>
          <li><%= button_to t(".sign_out"), sign_out_path, method: :delete %></li>
         </div> 
    <% else -%>
    <nav class="navbar navbar-inverse">
        <div class="navbar-header">
          <%= link_to 'Mingle', root_path, class: 'navbar-brand' %>
        </div>
        <div>
          <%= link_to t(".sign_in"), sign_in_path %>
          <%= link_to t(".sign_up"), sign_up_path %>
          <%= link_to "Sign in with Facebook", "/auth/facebook" %>
        </div>

    <% end -%>
  </div>

  <div class="container">
    <%= flash_messages %>
    <%= yield %>
  </div>

</body>
</html>
