<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% if @listing.photos? %>
   		<div class= "item active">
   			<%= image_tag @listing.photos.first.fill, class:"img-response" %>
   		</div>

   		<% @listing.photos.shift %>
   		<% @listing.photos.each do |photo| %>
   			<div class= "item">
   			<%= image_tag photo.fill, class:"img-response" %>
   			</div>
   		<%end%>

    <% else %> 
      <%= "ERROR NO PIC" %>
    <%end%>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%= form_for [@listing, @reservation] do |f| %>
  <div class="col-sm-12">
    <%= f.label :num_guests %>
    <%= f.number_field :num_guests %>
  </div>
  <br>
  <div class="col-sm-6">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, min: Date.today %>
  </div>
  <div class="col-sm-6">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>
  <%= f.submit "Submit Booking", class: 'btn btn-primary' %>
 <%end%> 


 <h2>Booked Dates</h2>
 <table class="table table-striped">
   <tr>
     <th>Listing Title</th>
     <th>Start Date</th>
     <th>End Date</th>
     <th>Num Guests</th>
    
   </tr>

   <% Reservation.all.each do |booking| %>
     <tr>
       <td><%= link_to booking.listing.title, booking.listing %></td>
       <td><%= booking.start_date.strftime('%d %B %Y') %></td>
       <td><%= booking.end_date.strftime('%d %B %Y') %></td>
       <td><%= booking.num_guests %></td>
     </tr>
   <% end %>
 </table>
 <%= link_to "Make Payment", braintree_new_path %>
 

