<div class="panel-heading">Book Now</div>
<%= form_for [@listing, @reservation] do |f| %>
  <table class="booking-table">
      <thead>
        <tr class="info">
          <th><%= f.label :num_guests %></th>
          <td><%= f.number_field :num_guests %></td>
        </tr>
        <tr class="info">  
          <th><%= f.label :start_date %></th>
          <td><%= f.date_field :start_date, min: Date.today %></td>
        </tr>
        <tr class="info"> 
          <th><%= f.label :end_date %></th> 
          <td><%= f.date_field :end_date %></td>
        </tr>
      </thead>
    </table>
    <%= f.submit "Submit Booking", class: 'btn btn-primary'%>
 <%end%> 