<%= form_for [@listing, @reservation] do |f| %>
  <div class="col-sm-12">
    <%= f.label :num_guests %>
    <%= f.number_field :num_guests %>
  </div>
  <br>
  <div class="col-sm-6">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, min: Date.today %>
  </div>
  <div class="col-sm-6">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>
  <%= f.submit "Submit Booking", class: 'btn btn-primary' %>
<%end%> 
